<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/wallets">

    <fragment
        android:id="@+id/wallets"
        android:name="com.example.loftcoin.ui.wallets.WalletsFragment"
        android:label="@string/wallets"
        android:layout="@layout/fragment_wallets" />

    <fragment
        android:id="@+id/rates"
        android:name="com.example.loftcoin.ui.rates.RatesFragment"
        android:layout="@layout/fragment_rates"
        android:label="@string/rates"/>

    <fragment
        android:id="@+id/converter"
        android:name="com.example.loftcoin.ui.converter.ConverterFragment"
        android:layout="@layout/fragment_converter"
        android:label="@string/converter"/>

    <dialog
        android:id="@+id/currency_dialog"
        android:name="com.example.loftcoin.ui.currency.CurrencyDialog"
        tools:layout="@layout/dialog_currency"
        android:label="CurrencyDialog" />

</navigation>